<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/bg_logo" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_active" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/advance_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="Activate consultation"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:reflectionColor="#ff0000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_guideline" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/guideline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:checked="true"
                    android:paddingLeft="50dp"
                    android:text="Consolidated guidelines"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_medicine" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/medicines"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="Medicines information"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_aboutus" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="About us"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_tools" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="FAQ's"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_favourite" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/add_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="Favourite"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_helpline" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/helpline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="Helpline"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_contact_us" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="Contact us"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_share" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="Share"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/sync" />

                <com.algorelpublic.zambia.Shimmer.ShimmerRadioButton
                    android:id="@+id/sync"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/side_menu_selector"
                    android:button="@null"
                    android:paddingLeft="50dp"
                    android:text="Sync"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RadioGroup>
    </ScrollView>
</LinearLayout>